        border-color: #bce8f1;
    }

    .file-preview img {
        max-height: 100px;
    }

    .file-preview {
        min-height: 100px;
        text-align: center;
    }

    .nav {
        min-height: 20px;
        padding: 10px;
        margin-bottom: 20px;
        background-color: #f5f5f5;
